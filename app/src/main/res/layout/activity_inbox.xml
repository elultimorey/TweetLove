<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inbox"
    android:gravity="center_horizontal"
    android:id="@+id/inbox_root">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/topmid_inbox_layout"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    android:src="@drawable/logo"
                    android:id="@+id/logo"
                    android:contentDescription="@string/logo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp" />
                <TextView
                    android:text="@string/quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quote"
                    style="@style/text_blue_h1"
                    android:layout_below="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/mid_inbox_layout"
                android:layout_below="@+id/topmid_inbox_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arroba"
                    android:id="@+id/arroba_tv"
                    android:layout_alignTop="@+id/username_inbox"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    style="@style/text_arroba"
                    android:layout_marginTop="5dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_inbox"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_toRightOf="@+id/arroba_tv"
                    android:layout_marginLeft="5dp">
                    <EditText
                        android:hint="@string/input"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:height="50dp"
                        android:singleLine="true"
                        android:id="@+id/username_editText"/>
                </LinearLayout>

                <Button
                    android:layout_height="30dp"
                    android:layout_width="50dp"
                    android:text="@string/search"
                    android:id="@+id/btnSearch"
                    android:textColor="@color/white"
                    android:background="@drawable/heart_button"
                    android:layout_toEndOf="@+id/username_inbox"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_alignTop="@+id/arroba_tv"
                    android:layout_toRightOf="@+id/username_inbox"
                    android:layout_marginLeft="5dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/report"
                android:layout_below="@+id/mid_inbox_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                style="@style/text_blue_mini"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adLayout_inbox"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>
