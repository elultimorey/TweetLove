<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".inbox"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/inbox_layout">
        <TextView
            android:text="@string/quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quote"
            style="@style/text_blue_h1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arroba"
            android:id="@+id/arroba_tv"
            android:layout_alignTop="@+id/username_inbox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/text_blue"
            android:layout_marginTop="5dp" />

        <EditText
            android:hint="@string/input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/username_inbox"
            android:inputType="text"
            android:height="50dp"
            android:layout_below="@+id/quote"
            android:layout_toRightOf="@+id/arroba_tv" />

        <Button
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:id="@+id/btnSearch"
            android:layout_alignTop="@+id/username_inbox"
            android:layout_toRightOf="@+id/username_inbox"
            android:layout_toEndOf="@+id/username_inbox"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/username_inbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/report"
            android:layout_below="@+id/username_inbox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

</RelativeLayout>
