<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/blue_action_bar</item>
    </style>
    <style name="blue_action_bar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_blue_h1">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="text_blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="text_blue_mini">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_blue_normal">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_blue_normal_bold">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_arroba">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
